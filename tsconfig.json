{
  "compilerOptions": {
    "target": "ESNext",
    "module": "commonjs",
    "experimentalDecorators": true,
    "moduleResolution": "Node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@validations/*": [
        "packages/validations/*"
      ],
    }
  },
  "exclude": [
    "node_modules",
    "dist"
  ]
}